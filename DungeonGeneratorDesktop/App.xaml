<Application x:Class="DungeonGeneratorDesktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l="clr-namespace:DungeonGeneratorDesktop"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <l:DungeonSizeConverter x:Key="SizeConverter" />
        <l:DimensionsConverter x:Key="MarginConverter"/>
        <l:GridXConverter x:Key="gridXConverter"/>
        <l:GridYConverter x:Key="gridYConverter"/>
        <l:ViewPortConverter x:Key="ViewPortConverter"/>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Helvetica"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="3"/>
        </Style>
    </Application.Resources>
</Application>
